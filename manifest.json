{
  "manifest_version": 3,
  "name": "オンクラス感想エクスポーター",
  "version": "1.0.0",
  "description": "オンクラスの感想データをエクスポートするChrome拡張機能",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://manager.the-online-class.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://manager.the-online-class.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
